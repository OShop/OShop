@using OShop.Models
@{
    ShippingProviderOption selectedOption = Model.Cart.Shipping as ShippingProviderOption;
    ShippingProviderOption option = Model.ProviderOption;
}
<input type="radio" name="ShippingProviderId" value="@option.Id" class="oshop-autoupdate" @(selectedOption != null && selectedOption.Id == option.Id ? "checked" : "")/>
@Display(BuildDisplay(option.Provider, "Summary"))
@Display(New.Price().ContentPart(option).NumberFormat(Model.NumberFormat))
